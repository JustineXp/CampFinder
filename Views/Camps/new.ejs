<%- include('../partials/header') %> <%- include('../partials/nav') %>
<div class="container">
    <form action="/campgrounds" method="post">
        
<div class=" resized col-md-4 col-sm-6">
      <h1>Please add a Camp </h1>
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="camp"
        placeholder="Enter the Camp Name"
      />
    </div>
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="image"
        placeholder="Enter Image URL"
      />
    </div>
    <div class="form-group">
      <textarea class="form-control mb-3" rows="3" name="description" placeholder="Camp Description . . ."></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</div>
</form>

<%- include('../partials/footer') %>
