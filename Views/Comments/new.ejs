<%- include('../partials/header') %> <%- include('../partials/nav') %>
<div class="container">
    <form action="/campgrounds/<%= campId %>/comments" method="post">
        
<div class=" resized col-md-4 col-sm-6">
      <h1>Add a Comment</h1>
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="comment"
        placeholder="Comment"
      />
    </div>
    <div class="form-group">
      <input
        class="form-control"
        type="text"
        name="author"
        placeholder="Author"
      />
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </div>
</div>
</form>

